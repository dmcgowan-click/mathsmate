<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        style="@style/Paragraph2"
        android:id="@+id/tvTteEqRange"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_column="0"
        android:layout_row="0"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:text="@string/settings_range"/><!-- Not Happy about using marginTop, but unable to get appConstraint setting to work as desired-->

    <SeekBar
        style="@style/Paragraph2"
        android:id="@+id/sbTteEqRange"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_row="0"
        android:layout_column="1"
        android:gravity="center_vertical"
        android:padding="10dp" /><!-- Not Happy about using marginTop, but unable to get appConstraint setting to work as desired-->

    <TextView
        style="@style/Paragraph2"
        android:id="@+id/tvTteEqRangeVal"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:gravity="center_vertical" />

    <TextView
        style="@style/Paragraph2"
        android:id="@+id/tvTteRandom"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:text="@string/settings_random"/><!-- Not Happy about using marginTop, but unable to get appConstraint setting to work as desired-->

    <SeekBar
        style="@style/Paragraph2"
        android:id="@+id/sbTteRandom"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:gravity="center_vertical"
        android:padding="10dp" /><!-- Not Happy about using marginTop, but unable to get appConstraint setting to work as desired-->

    <TextView
        style="@style/Paragraph2"
        android:id="@+id/tvTteRandomVal"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:padding="10dp"
        android:gravity="center_vertical" />

</GridLayout>
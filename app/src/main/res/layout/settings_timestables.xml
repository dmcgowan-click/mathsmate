<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"><!-- Not Happy about this, but unable to get appConstraint setting to work as desired-->

    <TextView
        style="@style/Paragraph1"
        android:id="@+id/tvTteEqRange"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="start"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:text="@string/settings_range"/>

    <SeekBar
        style="@style/Paragraph1"
        android:id="@+id/sbTteEqRange"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="10dp" />

    <TextView
        style="@style/Paragraph1"
        android:id="@+id/tvTteRandom"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_gravity="start"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:text="@string/settings_random"/>

    <RadioGroup
        style="@style/Paragraph1"
        android:id="@+id/rgTteRandom"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_gravity="center_vertical"
        android:padding="10dp">

        <RadioButton
            style="@style/Paragraph2"
            android:id="@+id/rbTteRandomTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_true"/>

        <RadioButton
            style="@style/Paragraph2"
            android:id="@+id/rbTteRandomFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_false"
            android:checked="true"/>
    </RadioGroup>
</GridLayout>